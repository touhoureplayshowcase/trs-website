{
  "name": "trs-website",
  "version": "1.0.0",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "author": "Paul Schwandes",
  "license": "MIT",
  "description": "Website for touhoureplayshowcase.com",
  "main": "build/backend/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "trash .parcel-cache build && parcel build && copyfiles \"build/**/*\" \"\\\\schwandes.de\\sambashare\\trs-website\""
  },
  "targets": {
    "frontend": {
      "source": "src/frontend/**/*.html",
      "distDir": "build/frontend",
      "context": "browser",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      }
    },
    "backend": {
      "source": "src/backend/server.ts",
      "distDir": "build/backend",
      "context": "node",
      "outputFormat": "commonjs",
      "scopeHoist": true,
      "optimize": true,
      "engines": {
        "node": "= 20"
      }
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "browserslist": "^4.25.1",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.14.4",
    "trash-cli": "^6.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
